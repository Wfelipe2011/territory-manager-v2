{
  "name": "territory-manager",
  "version": "1.0.0",
  "description": "Esta API oferece recursos para gerenciamento de territórios, autenticação de usuários, verificação de saúde do servidor, manuseio de informações de casas, realização de rodadas, e assinaturas eletrônicas.",
  "title": "Territory Manager",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "docker:app:dev": "sudo docker compose -f docker-compose.dev.yml up --build -d",
    "docker:db:dev": "sudo docker compose -f docker-compose.dev.yml up db -d",
    "docker:app:acp": "sudo docker compose -f docker-compose.acceptance.yml up --build -d",
    "docker:dev:down": "sudo docker compose -f docker-compose.dev.yml down",
    "docker:prod:down": "sudo docker compose down",
    "docker:prod": "sudo docker compose up --build -d",
    "logs:dev": "sudo docker compose -f docker-compose.dev.yml logs -f app",
    "logs:acp": "sudo docker compose -f docker-compose.acceptance.yml logs -f app",
    "logs:prod": "sudo docker compose logs -f app",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@logtail/node": "^0.4.12",
    "@logtail/winston": "^0.4.12",
    "@nestjs/cache-manager": "^2.1.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.1.3",
    "@nestjs/schedule": "^3.0.2",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/swagger": "^7.1.8",
    "@nestjs/throttler": "^4.2.1",
    "@nestjs/websockets": "^10.1.3",
    "@prisma/client": "^5.1.1",
    "bcrypt": "^5.1.0",
    "cache-manager": "^5.2.3",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.1",
    "nest-winston": "^1.9.4",
    "node-xlsx": "^0.23.0",
    "nodemailer": "^6.9.9",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "systeminformation": "^5.25.3",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.76",
    "@types/bcrypt": "^5.0.0",
    "@types/cron": "^2.4.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "csv-parser": "^3.0.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.1.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
