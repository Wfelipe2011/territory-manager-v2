# Server Configuration
PORT=3000
TZ=America/Sao_Paulo
INSTANCE_ID=dev-instance-1

# Database Configuration
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/territory_manager?schema=public"
POSTGRES_DB=territory_manager

# Security (JWT)
# Use a strong secret for production
JWT_SECRET="changeme_super_secret_key"

# API Key for Donations (N8N Integration)
# Generate a strong random key for production
API_KEY_SECRET="changeme_api_key_secret"

# Logging (Logtail / BetterStack)
LOGTAIL_API_KEY=

# Email Service (Nodemailer)
NODEMAILER_USER=admin@example.com
NODEMAILER_APP_PASS="app-password-here"

# Redis (Optional / If used in future features)
REDIS_URL="redis://localhost:6379"

# AWS CloudWatch Logs (Optional)
# O transport CloudWatch só é ativado quando ambas as chaves estão presentes.
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
CLOUDWATCH_LOG_GROUP=territory-manager
